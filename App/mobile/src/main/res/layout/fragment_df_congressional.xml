<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.patrickohalloran.represent.CongressionalViewActivity$PlaceholderFragment"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:id="@+id/pageLayout"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:layout_marginTop="?android:attr/actionBarSize"
        android:textAlignment="center"
        android:id="@+id/name_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dianne Feinstein"
        android:textSize="36dp"
        android:textColor="@color/colorWhite"/>

    <View
        android:layout_marginTop="6dp"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="@color/colorWhite"></View>

    <LinearLayout
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/photo_id"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:src="@drawable/dianne_feinstein"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/email_id"
                android:layout_marginTop="36dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dianne_feinstein@gmail.com"
                android:textColor="@color/colorWhite"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/website_id"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dianne_feinstein_website.com"
                android:textColor="@color/colorWhite"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_marginTop="6dp"
        android:id="@+id/twitter_logo_id"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:src="@drawable/twitter_logo"/>

    <TextView
        android:id="@+id/tweet_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/df_tweet"
        android:textSize="18dp"
        android:textColor="@color/colorWhite"/>

    <Button
        android:id="@+id/df_button"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/more_info"
        android:background="@color/colorWhite"
        android:textColor="@color/colorPrimaryDark"
        android:minHeight="30dp"/>



</LinearLayout>
