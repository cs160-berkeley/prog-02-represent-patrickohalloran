<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.patrickohalloran.represent">

    <!-- Permission to go on internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Permission to access current location -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainViewMobileActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CongressionalViewActivity"
            android:label="@string/title_activity_congressional_view"
            android:theme="@style/AppTheme" />

        <service android:name=".PhoneToWatchService" />
        <!-- Listeners are special services that need to be declared like below, as BIND_LISTENER -->
        <service
            android:name=".PhoneListenerService"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.BIND_LISTENER" />
            </intent-filter>
        </service>

        <!-- API key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyAGL9f4SkPBuvw2vKQx-TKS3LkEkqxINCI" />

        <activity
            android:name=".EnterZipCodeActivity"
            android:theme="@style/NoActionBar" />
        <activity android:name=".HTTPActivity" />

        <service
            android:name=".GPSService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".DetailedStuffActivity"></activity>
    </application>

</manifest>
